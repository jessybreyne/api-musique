{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <div class="p-5">
        <h1>Utilisateur</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ user.id }}</td>
                </tr>
                <tr>
                    <th>Nom d'utilisateur</th>
                    <td>{{ user.username }}</td>
                </tr>
                <tr>
                    <th>Rôles</th>
                    <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                </tr>
                <tr>
                    <th>Mot de passe</th>
                    <td>{{ user.password }}</td>
                </tr>
                <tr>
                    <th>Clé d'API</th>
                    <td>{{ user.APIKey }}</td>
                </tr>
            </tbody>
        </table>
    
        <a class="btn btn-info" href="{{ path('user_index') }}">Retour à la liste</a>
    
        <a class="btn btn-info mt-2 mb-2" href="{{ path('user_edit', {'id': user.id}) }}">Modifier</a>
    
        {{ include('user/_delete_form.html.twig') }}
    </div>
    
{% endblock %}
