<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
        <link rel="stylesheet" href="/css/bootstrap-4.4.1-dist/css/bootstrap.min.css">
        {% endblock %}
    </head>
    <body>
        {% block  navbar %}

        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="/">Musique API</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item {{ (current == 'index') ? 'active' : '' }}">
                    <a class="nav-link" href="{{ path('index') }}">Accueil {{ (current == 'index') ? '<span class="sr-only">(current)</span>' : '' }}</a>
                </li>
                {% if app.user %}
                <li class="nav-item {{ (current == 'crud') ? 'active' : '' }}">
                    <a class="nav-link" href="{{ path('crud') }}">Accès au CRUD {{ (current == 'crud') ? '<span class="sr-only">(current)</span>' : '' }}</a>
                </li>
                {% if is_granted('ROLE_ADMIN') %}
                <li class="nav-item {{ (current == 'admin') ? 'active' : '' }}">
                    <a class="nav-link" href="{{ path('user_index') }}"> Admin {{ (current == 'admin') ? '<span class="sr-only">(current)</span>' : '' }}</a>
                </li>
                {% endif %}
                <li class="nav-item {{ (current == 'api') ? 'active' : '' }}">
                    <a class="nav-link" href="{{ path('api_generator') }}">API {{ (current == 'api') ? '<span class="sr-only">(current)</span>' : '' }}</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_logout') }}">Déconnexion</a>
                </li>
                {% else %}
                <li class="nav-item {{ (current == 'login') ? 'active' : '' }}">
                    <a class="nav-link" href="{{ path('app_login') }}">Se connecter {{ (current == 'login') ? '<span class="sr-only">(current)</span>' : '' }}</a>
                </li>
                <li class="nav-item {{ (current == 'register') ? 'active' : '' }}">
                    <a class="nav-link" href="{{ path('app_register') }}">S'inscrire {{ (current == 'register') ? '<span class="sr-only">(current)</span>' : '' }}</a>
                </li>
                {% endif %}
            </ul>
        </div>
        </nav>

        {% endblock %}
        {% block body %}
        {% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
