{% extends 'base.html.twig' %}

{% block title %}Categorie{% endblock %}

{% block body %}
    <div class="p-5">
        <h1>Catégorie</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ categorie.id }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ categorie.nom }}</td>
                </tr>
            </tbody>
        </table>


        {% if app.user %}
            <a class="btn btn-info" href="{{ path('categorie_index') }}">Retour à la liste</a>
            <a class="btn btn-info mt-2 mb-2" href="{{ path('categorie_edit', {'id': categorie.id}) }}">Modifier</a>

            {{ include('categorie/_delete_form.html.twig') }}
            
        {% endif %}
    </div>



{% endblock %}
