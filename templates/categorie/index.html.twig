{% extends 'base.html.twig' %}

{% block title %}Categorie index{% endblock %}

{% block body %}
<div class="row justify-content-center">
            <div class="btn-group mt-3 col-3" role="group" aria-label="Basic example">
                <a href="{{ path('musique_index') }}" class="btn btn-secondary">Musique</a>
                <a href="{{ path('artiste_index') }}" class="btn btn-secondary">Artiste</a>
                <a href="{{ path('categorie_index') }}" class="btn btn-secondary">Cat√©gorie</a>
                <a href="{{ path('album_index') }}" class="btn btn-secondary">Album</a>
            </div>
        </div>
    <h1>Categorie index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for categorie in categories %}
            <tr>
                <td>{{ categorie.id }}</td>
                <td>{{ categorie.nom }}</td>
                <td>
                    <a class="btn btn-info" href="{{ path('categorie_show', {'id': categorie.id}) }}">Afficher</a>
                    <a class="btn btn-info" href="{{ path('categorie_edit', {'id': categorie.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('categorie_new') }}">Ajouter</a>
{% endblock %}
