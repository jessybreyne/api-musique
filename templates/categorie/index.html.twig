{% extends 'web/crud.html.twig' %}

{% block title %}Categorie index{% endblock %}
{% block body %}
{{ parent() }}
    <div class="ml-4 mr-4">
        <h1>Categorie index</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nom</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for categorie in categories %}
                <tr>
                    <td>{{ categorie.id }}</td>
                    <td>{{ categorie.nom }}</td>
                    <td>
                        <a class="btn btn-info" href="{{ path('categorie_show', {'id': categorie.id}) }}">Afficher</a>
                        <a class="btn btn-info" href="{{ path('categorie_edit', {'id': categorie.id}) }}">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a class="btn btn-primary" href="{{ path('categorie_new') }}">Ajouter</a>

    </div>
{% endblock %}
